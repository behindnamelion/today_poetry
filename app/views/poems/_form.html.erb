      <h2><%= pluralize(poem.errors.count, "error") %> prohibited this poem from being saved:</h2>

      <ul>
      <% poem.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :title, class: "col-form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :body, class: "col-form-label" %>
    <%= form.text_area :body, class: "form-control", rows: "15" %>
  </div>

  <div class="field form-group">
    <%= form.label :year, class: "col-form-label" %>
    <%= form.number_field :year, class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :description, class: "col-form-label" %>
    <%= form.text_area :description, class: "form-control", rows: "15"%>
  </div>

  <div class="field form-group">
    <%= form.label :picture, class: "col-form-label" %>
    <%= form.file_field :picture, class: "form-control-file"%>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
